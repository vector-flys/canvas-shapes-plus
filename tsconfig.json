{
  "compilerOptions": {
      "allowJs": true,
      "module": "NodeNext",
      "target": "ES2020",
      "declaration": true,
      "allowSyntheticDefaultImports": true,
      //"baseUrl": "src",
      //"rootDir": "src",
      "lib": ["esnext"],
      // "types": ["node", "jest"],
      "moduleResolution": "nodenext",
      "target": "ES2020",
      "outDir": "dist",
      "esModuleInterop": true,
      "strict": true,
      "strictFunctionTypes": true,
      "strictNullChecks": true,
      "alwaysStrict": true,
      
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
